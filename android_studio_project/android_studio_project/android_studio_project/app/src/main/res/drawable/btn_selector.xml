<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中状态：蓝色背景 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#1976D2" /> <!-- 蓝色（正确颜色值） -->
            <stroke
                android:width="1dp"
                android:color="#1976D2" /> <!-- 同色边框 -->
            <corners android:radius="4dp" /> <!-- 添加圆角，视觉更柔和 -->
        </shape>
    </item>

    <!-- 未选中状态：浅灰色背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- 浅灰色（#F5F5F5） -->
            <stroke
                android:width="1dp"
                android:color="#BDBDBD" /> <!-- 浅灰色边框 -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>